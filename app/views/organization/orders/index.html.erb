<!-- Flash notice in case of errors -->
<p id="notice"><%= notice %></p>

<!-- Big hero title to hold title information, search form, buttons, and aggragate information -->
<div class="jumbotron">
  <h1 class="text-center">Orders</h1>
  <div class="row">
    <div class="col d-flex justify-content-center"><%= link_to "New Order", new_organization_order_path%></div>
  </div>
  <br>
    <%= render "orders_search"%>
</div>



<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Sales Order</th>
      <th>Purchase Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td></td>
        <td><%= order.sales_order_id %></td>
        <td><%= order.purchase_order_id %></td>
        <td><%= link_to 'Open', organization_order_path(current_org, order) %></td>
        <td><%= link_to 'Edit', edit_organization_order_path(current_org, order) %></td>
        <td><%= link_to 'Delete', organization_order_path(current_org, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


