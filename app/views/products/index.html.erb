<div class="jumbotron">
  <h1 class="text-center">Products</h1>
  <div class="row">
    <div class="col d-flex justify-content-center"><%= link_to "New Product", new_product_path%></div>
    <div class="col d-flex justify-content-center"><%= link_to "Home" %></div>
  </div>
  <br>
    <%= 
    #render "orders_search"
    %>
</div>



<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Product Name</th>
      <th>Description</th>
      <th>Units in Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td></td>
        <td><%= link_to 'Open', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>